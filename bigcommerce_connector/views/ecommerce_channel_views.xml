<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="menu_multichannel_root" name="E-commerce Connectors"
                  sequence="45"
                  groups="bigcommerce_connector.group_listing_user"
                  web_icon="bigcommerce_connector,static/description/icon.png"/>

        <record id="action_channel_overview" model="ir.actions.act_window">
            <field name="name">Overview</field>
            <field name="res_model">ecommerce.channel</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{'active_test': False, 'search_default_connected': 1}</field>
            <field name="domain">['!',('name', '=ilike', '%(Template)'), ('platform', '!=', 'none')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No connected channel.
                    Please connect with your wanted channels by clicking Channel menu
                </p>
            </field>
        </record>

        <record id="ecommerce_channel_tree_view" model="ir.ui.view">
            <field name="name">ecommerce.channel.tree</field>
            <field name="model">ecommerce.channel</field>
            <field name="arch" type="xml">
                <tree string="Channel" create="0" edit="0" delete="0" export_xlsx="0">
                    <field name="name" string="Store"/>
                    <field name="status"
                           decoration-success="status == 'connected'"
                           decoration-danger="status == 'disconnected'"
                           widget="badge"/>
                    <field name="last_sync_order" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="ecommerce_channel_search_view" model="ir.ui.view">
            <field name="name">ecommerce.channel.search</field>
            <field name="model">ecommerce.channel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Connected" name="connected"
                            domain="[('active','=',True)]"/>
                </search>
            </field>
        </record>

        <menuitem id="menu_overview" name="Overview" action="action_channel_overview"
                  parent="menu_multichannel_root" sequence="1"/>

        <menuitem id="menu_listings_root" name="Product Mappings"
                  parent="menu_multichannel_root" sequence="10"/>

        <menuitem id="menu_orders_root" name="Orders"
                  parent="menu_multichannel_root" sequence="20"/>

        <menuitem id="menu_configuration" name="Configuration"
                  parent="menu_multichannel_root" sequence="30"/>
        

        <record id="ecommerce_channel_kanban" model="ir.ui.view">
            <field name="name">ecommerce.channel.kanban</field>
            <field name="model">ecommerce.channel</field>
            <field name="arch" type="xml">
                <kanban quick_create="false" create="true"
                        import="false"
                        class="oe_background_grey o_kanban_dashboard o_kanban_view o_kanban_ecommerce_channel">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="platform"/>
                    <field name="active"/>
                    <field name="show_on_dashboard"/>
                    <field name="kanban_dashboard"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="RecordTop">
                            <div t-attf-class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <t t-if="record.platform.raw_value">
                                            <img type="open"
                                             t-attf-src="/bigcommerce_connector/static/src/img/logo/#{record.platform.raw_value}.png"
                                             style="width:30px;margin:10px"
                                             alt="Platform"/>
                                        </t>
                                        <t t-esc="record.name.value"/>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <field name="status" widget="label_selection"
                                                       style="border:none"
                                                       options="{'classes': {'disconnected': 'danger', 'connected': 'success'}}"/>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-7">
                                                    <span>Last order sync</span>
                                                </div>
                                                <div class="col-md-5">
                                                    <field name="last_sync_order"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-7">
                                                    <span>Total sales last 30 days</span>
                                                </div>
                                                <div class="col-md-5">
                                                    <span t-esc="dashboard.sales_total"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-7">
                                                    <span>Total orders last 30 days</span>
                                                </div>
                                                <div class="col-md-5">
                                                    <span t-esc="dashboard.sales_unit"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" aria-label="Selection" role="img" title="Selection"/>
                                    </a>
                                </div>
                            </div>
                        </t>

                        <t t-name="RecordManage">
                            <div class="row">
                                <t t-if="record.platform.raw_value">
                                    <div class="col-4 o_kanban_card_manage_section o_kanban_manage_view">
                                        <div class="o_kanban_card_manage_title">
                                            <span role="separator">View</span>
                                        </div>
                                        <t t-if="record.platform.raw_value == 'bigcommerce'">
                                            <div>
                                                <a role="menuitem" type="object" name="open_product_channel_categories">Categories</a>
                                            </div>
                                            <div>
                                                <a role="menuitem" type="object" name="open_product_brands">Brands</a>
                                            </div>
                                            <div>
                                                <a role="menuitem" type="object" name="open_tax_classes">Tax Classes</a>
                                            </div>
                                            <div>
                                                <a role="menuitem" type="object" name="open_customer_groups">Customer Groups</a>
                                            </div>
                                            <div>
                                                <a role="menuitem" type="object" name="open_channel_pricelist">Price Lists</a>
                                            </div>
                                            <div>
                                                <a role="menuitem" type="object" name="open_payment_gateways">Payment Gateways</a>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="col-4 o_kanban_card_manage_section o_kanban_manage_action">
                                        <div class="o_kanban_card_manage_title">
                                            <span role="separator">Action</span>
                                        </div>
                                        <div class="action_import_product_manually">
                                            <a role="menuitem" type="object"
                                                name="action_import_product_manually">Import Products</a>
                                        </div>
                                        <div attrs="{'invisible':[('platform','!=','bigcommerce')]}">
                                            <a role="menuitem" type="object" name="open_import_other_data">Import Other Data</a>
                                        </div>
                                        <div>
                                            <a role="menuitem" type="object" name="action_import_order_manually">Import Orders</a>
                                        </div>
                                    </div>
                                    <div class="col-4 o_kanban_card_manage_section o_kanban_manage_log">
                                        <div class="o_kanban_card_manage_title">
                                            <span role="separator">Log</span>
                                        </div>
                                        <div name="import_logs">
                                            <a role="menuitem" type="object" 
                                                name="open_log_import_product">Product Import</a>
                                            <a role="menuitem" type="object" attrs="{'invisible':[('platform','!=','bigcommerce')]}"
                                                name="open_log_import_other_data">Other Data Import</a>
                                            <a role="menuitem" type="object" name="open_log_import_order">Order Import</a>
                                        </div>
                                        <div name="export_logs"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                        <div class="o_kanban_card_manage_title">
                                            <span role="separator">View</span>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                <div class="col-8">
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <div groups="bigcommerce_connector.group_listing_manager" 
                            style="text-align:right"
                            class="row o_kanban_card_manage_settings">
                                <div role="menuitem" class="col-12">
                                    <a type="object" name="open_settings">Settings</a>
                                </div>
                            </div>
                        </t>

                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}">
                                <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="dashboard"/>
                                <t t-call="RecordTop"/>
                                <div class="container o_kanban_card_content">
                                    <t t-name="RecordBodyGraph">
                                        <field name="kanban_dashboard_graph"
                                            graph_type="line"
                                            display_label_xy="True"
                                            display_currency="True"
                                            widget="kanban_dashboard_graph"/>
                                    </t>
                                </div>
                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <t t-call="RecordManage"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ecommerce_channel_form_settings" model="ir.ui.view">
            <field name="name">ecommerce.channel.form.settings</field>
            <field name="model">ecommerce.channel</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form create="0">
                    <header>
                    </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <field name="status" invisible="1"/>
                        <field name="write_date" invisible="1"/>
                        <div class="oe_button_box"
                             attrs="{'invisible': [('write_date', '=', False)]}"
                             name="button_box">
                            <button name="disconnect"
                                    attrs="{'invisible':[('status','=','disconnected')]}"
                                    class="oe_stat_button"
                                    confirm="Are you sure you want to disconnect this channel?"
                                    type="object" icon="fa-globe">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": {"string_true": "Connected",
                                                              "hover_true": "Disconnect",
                                                              "string_false": "Disconnect",
                                                              "hover_false": "Reconnect"}}'/>
                            </button>
                            <button name="reconnect"
                                    attrs="{'invisible':[('status','=','connected')]}"
                                    class="oe_stat_button"
                                    type="object" icon="fa-globe">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": {"string_false": "Disconnected",
                                                              "hover_false": "Reconnect",
                                                              "string_true": "Connected",
                                                              "hover_true": "Disconnect",}}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Store name"
                                       attrs="{'readonly': [('write_date', '!=', False)]}"
                                       required="True"/>
                            </h1>
                        </div>
                        <group name="common_information">
                            <field name="platform" required="True" attrs="{'invisible':[('write_date', '!=', False)]}"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"
                                   force_save="1"
                                   options="{'no_create': True}"/>
                            <field name="store_hash"
                                string="Store Hash"
                                attrs="{'invisible':[('platform','!=','bigcommerce')],
                                'required': [('platform', '=', 'bigcommerce')],
                                'readonly': [('write_date', '!=', False)]}"/>
                            <field name="app_client_id"
                                string="App ClientID"
                                attrs="{'invisible':[('platform','!=','bigcommerce')],
                                'required': [('platform', '=', 'bigcommerce')]}"/>
                            <field name="app_access_token"
                                string="Access Token"
                                password="1"
                                attrs="{'invisible':[('platform','!=','bigcommerce')],
                                'required': [('platform', '=', 'bigcommerce')]}"/>
                        </group>
                        <notebook attrs="{'invisible':[('write_date', '=', False)]}">
                            <page name="product_configuration_page" string="Product Configuration">
                                <group name="top">
                                    <group>
                                        <label for="auto_create_master_product"/>
                                        <div>
                                            <field name="auto_create_master_product"/>
                                            <p class="text-muted">
                                               Automatically create a new product if system couldn't find the product based on SKU
                                            </p>
                                        </div>
                                    </group>
                                    <group attrs="{'invisible':[('platform','!=','bigcommerce')]}">
                                        <label for="default_categ_id"/>
                                        <div>
                                            <field name="default_categ_id" 
                                            options="{'no_open':True,'no_create':True, 'no_create_edit':True}"
                                            domain="[('channel_id.id', '=', id)]"/>
                                            <p class="text-muted">
                                                Default category for new mappings created from system to store
                                            </p>
                                        </div>
                                        <label for="currency_ids" string="Currencies"/>
                                        <div>
                                            <field name="currency_ids" widget="many2many_tags" readonly="1"/>
                                            <div class="text-muted">
                                                Default currency for creating new pricelists:
                                                <field name="currency_id" nolabel="1" readonly="1" options="{'no_open': True}"/>
                                            </div>
                                            <button name="refresh_currencies" class="btn-link" type="object" icon="fa-refresh" string="Refresh Currencies"/>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page name="inventory_sync_page" string="Inventory Configuration" attrs="{'invisible': [('write_date', '=', False)]}">
                                <group name="physical_dimension_settings"
                                    attrs="{'invisible':['|', ('platform','!=','bigcommerce'), ('write_date','=',False)]}"
                                    string="Physical Dimensions Settings">
                                    <field name="weight_unit" string="Weight Measurement"
                                        attrs="{'invisible':[('platform','!=','bigcommerce')],
                                        'required': [('platform', '=', 'bigcommerce')]}"/>
                                    <field name="dimension_unit" string="Length Measurement"
                                        attrs="{'invisible':[('platform','!=','bigcommerce')],
                                        'required': [('platform', '=', 'bigcommerce')]}"/>
                                </group>
                                <group name="inventory_sync">
                                    <group>
                                        <label for="is_enable_inventory_sync" string="Enable Inventory Sync (*)"/>
                                        <div>
                                            <field name="is_enable_inventory_sync"/>
                                            <p class="text-muted">
                                                Automatically update your available inventory quantities for products in this store
                                            </p>
                                        </div>
                                        <field name="is_running_bulk_inventory_sync" invisible="1"/>
                                        <label for="is_allow_manual_bulk_inventory_sync" string="Allow Bulk Sync Manually"/>
                                        <div>
                                            <div class="o_row">
                                                <field name="is_allow_manual_bulk_inventory_sync"/>
                                                <button name="bulk_inventory_sync" type="object"
                                                        class="btn btn-link mt-1"
                                                        attrs="{'invisible': ['|', ('is_allow_manual_bulk_inventory_sync', '=', False), ('is_running_bulk_inventory_sync', '=', True)]}">
                                                    <i class="fa fa-arrow-right"/> Update to <field name="platform" readonly="1" force_save="1"/>
                                                </button>
                                                <p attrs="{'invisible': [('is_running_bulk_inventory_sync', '=', False)]}">Running...</p>
                                            </div>
                                            <div attrs="{'invisible': ['|', ('last_all_inventory_sync', '=', False), ('is_running_bulk_inventory_sync', '=', True)]}">
                                                Last all inventory updated: <field name="last_all_inventory_sync" readonly="1"/>
                                            </div>
                                        </div>
                                    </group>
                                    <group>
                                        <label for="percentage_inventory_sync" string="Quantity Sync (**)"/>
                                        <div>
                                            <div class="o_row">
                                                <field name="percentage_inventory_sync"/>
                                                (%)
                                            </div>
                                            <p class="text-muted">
                                                Percentage of available inventory from active warehouses
                                            </p>
                                        </div>
                                        <label for="maximum_inventory_sync" string="Maximum Quantity"/>
                                        <div>
                                            <div class="o_row">
                                                <field name="is_enable_maximum_inventory_sync"/>
                                                <field name="maximum_inventory_sync"
                                                    attrs="{'invisible': [('is_enable_maximum_inventory_sync', '=', False)]}"/>
                                            </div>
                                            <p class="text-muted">
                                                This is the maximum quantity to sync to <span><field name="platform"
                                                                                                    readonly="1" force_save="1"
                                                                                                    nolabel="1"/></span>
                                            </p>
                                        </div>
                                        <label for="minimum_inventory_sync" string="Minimum Quantity"/>
                                        <div>
                                            <div class="o_row">
                                                <field name="is_enable_minimum_inventory_sync"/>
                                                <field name="minimum_inventory_sync"
                                                    attrs="{'invisible': [('is_enable_minimum_inventory_sync', '=', False)]}"/>
                                            </div>
                                            <p class="text-muted">
                                                This is the minimum quantity to sync to <span><field name="platform"
                                                                                                    readonly="1" force_save="1"
                                                                                                    nolabel="1"/></span>
                                            </p>
                                        </div>
                                        <label for="active_warehouse_ids"/>
                                        <div>
                                            <field name="active_warehouse_ids"
                                                attrs="{'required':[('is_enable_inventory_sync','=',True)]}"
                                                domain="[('company_id', '=', company_id)]"
                                                widget="many2many_checkboxes"/>
                                        </div>
                                    </group>
                                </group>
                                <group string="Exclude Products to Sync Inventory">
                                    <field name="exclude_inventory_sync_ids" nolabel="1">
                                        <tree>
                                            <field name="name" string="Applicable On"/>
                                        </tree>
                                    </field>
                                </group>
                                <div name="note_section" attrs="{'invisible': ['|', ('write_date', '=', False), ('platform', 'in', ['none', 'gunbroker'])]}">
                                    <div><b><i>(*) Inventory sync includes real-time updates and nightly all inventory sync</i></b></div>
                                    <div><b><i>(**) Syncing unit of measures isn't supported</i></b></div>
                                </div>
                            </page>
                            <page name="order_configuration_page" string="Order Configuration">
                                <group name="order_fulfillment_settings">
                                    <group name="left">
                                    </group>
                                    <group name="right">
                                        <label for="min_order_date_to_import" string="Order Date to Import"/>
                                        <div>
                                            <field name="min_order_date_to_import"/>
                                            <p class="text-muted">
                                                Orders prior to this date will not be imported automatically
                                            </p>
                                        </div>
                                    </group>
                                </group>
                                <group name="top">
                                    <group name="top_left">
                                        <field name="order_prefix"/>
                                        <field name="sales_team_id" attrs="{'required':[('write_date','!=',False)]}"/>
                                        <field name="default_guest_customer"/>
                                    </group>
                                    <group name="top_right">
                                        <field name="default_order_tag_ids" string="Tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <field name="default_shipping_policy" attrs="{'required':[('write_date','!=',False)]}"/>
                                        <field name="default_warehouse_id" string="Warehouse" />
                                    </group>
                                </group>
                                <group name="bottom">
                                    <group name="bottom_left">
                                        <field name="default_tax_product_id" attrs="{'required':[('write_date','!=',False)]}"/>
                                        <field name="default_discount_product_id" attrs="{'required':[('write_date','!=',False)]}"/>
                                    </group>
                                    <group name="bottom_right">
                                        <field name="default_shipping_cost_product_id" attrs="{'required':[('write_date','!=',False)]}"/>
                                    </group>
                                </group>
                                <group name="customer" string="Customer">
                                    <group>
                                        <field name="is_import_customer_allowed" string="Import Customer Info &amp; Addresses"/>
                                    </group>
                                    <group>
                                        <field name="default_customer_id" string="Default Customer"
                                            attrs="{'invisible': [('is_import_customer_allowed', '=', True)], 'required': [('is_import_customer_allowed', '=', False)]}"/>
                                    </group>
                                </group>
                                <group string="Import &amp; Automation Settings">
                                    <field name="order_process_rule_ids" nolabel="1" context="{'default_channel_id': id}"/>
                                </group>

                                <div class="o_horizontal_separator" string="Payment Settings" name="payment_settings"> Payment Settings </div>
                                    <group colspan="12">
                                        <p class="text-muted">Default values to create new payments if there is no setting for payment gateways</p>
                                    </group>
                                <group>
                                    <group>
                                        <field name="available_payment_method_ids" invisible="1"/>
                                        <field name="default_payment_journal_id" attrs="{'required':[('write_date','!=',False)]}" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                        <field name="default_payment_method_id" attrs="{'required':[('write_date','!=',False)]}" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                        <field name="default_deposit_account_id" attrs="{'required':[('write_date','!=',False)]}" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                    </group>
                                </group>
                                <field name="payment_method_mapping_ids" nolabel="1" context="{'default_channel_id': id}">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="payment_gateway_id" domain="[('channel_id', '=', parent.id)]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                        <field name="payment_journal_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                        <field name="payment_method_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                        <field name="deposit_account_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_channel_list" model="ir.actions.act_window">
            <field name="name">Manage Stores</field>
            <field name="res_model">ecommerce.channel</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'active_test': False, 'hasSelectors': False, 'search_default_connected': 1}</field>
            <field name="domain">['!',('name', '=ilike', '%(Template)'), ('platform', '!=', 'none')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ecommerce_channel_tree_view')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('ecommerce_channel_kanban')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_ecommerce_channel_form_settings')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No connected stores.
                </p>
            </field>
        </record>

        <menuitem id="menu_management_channels" name="Manage Stores" action="action_channel_list"
                  groups="bigcommerce_connector.group_listing_manager"
                  parent="menu_configuration" sequence="100"/>

        <record id="action_ecommerce_channel_setting" model="ir.actions.act_window">
            <field name="name">Setting</field>
            <field name="res_model">ecommerce.channel</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('bigcommerce_connector.view_ecommerce_channel_form_settings')})]"/>
        </record>
    </data>
</odoo>